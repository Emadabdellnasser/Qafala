<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:background="@drawable/backhsp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        >





    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        >

        <design.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="/ تسجيل"
            android:textColor="#000"
            android:layout_weight="1.5"
            android:layout_marginRight="15dp"
            android:textDirection="rtl"
            android:paddingLeft="6dp"
            android:layout_gravity="center"
            android:id="@+id/register"
            android:textSize="18dp" />

        <design.MyTextView
            android:layout_width="0dp"
            android:layout_weight="5."
            android:textDirection="ltr"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:layout_gravity="center"
            android:text="دخول  "
            android:textColor="#000"
            android:textSize="18dp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/welcome_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="visible">

        <design.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="خروج"
            android:textColor="#000"
            android:background="@drawable/btn_out"
            android:paddingRight="22dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.8"
            android:paddingBottom="3dp"
            android:elevation="7dp"
            android:layout_marginRight="5dp"
            android:textDirection="rtl"
            android:layout_gravity="center"
            android:id="@+id/logout"
            android:textSize="18dp" />

    <design.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="عماد"
            android:textColor="#000"
            android:layout_weight="1"
            android:layout_marginRight="06dp"
            android:textDirection="rtl"
            android:paddingLeft="6dp"
            android:layout_gravity="center"
            android:id="@+id/name_cline"
            android:textSize="18dp" />

        <design.MyTextView
            android:layout_width="0dp"
            android:layout_weight="4."
            android:textDirection="ltr"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_log"
            android:layout_gravity="center"
            android:text="مرحبا "
            android:textColor="#000"
            android:textSize="18dp"

            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/logosp"
        android:layout_below="@+id/head"
        android:id="@+id/imageView2" />

        <LinearLayout
            android:id="@+id/all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView2"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">


            <LinearLayout
                    android:id="@+id/TaskmasterSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/log"
                    android:elevation="8dp"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:paddingBottom="13dp"
                    android:paddingTop="13dp"


                >


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/boss" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:background="#686262" />

                    <design.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:background="@android:color/transparent"
                        android:hint="بحث عن كفيل"
                        android:textColor="#95BD3D"
                        android:textColorHint="#000" />


                </LinearLayout>



            <LinearLayout
                android:id="@+id/workerSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/log"
                android:elevation="8dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingBottom="13dp"
                android:paddingTop="13dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/employee" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="#686262" />

                <design.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="6"
                    android:background="@android:color/transparent"
                    android:hint="بحث عن عامل"
                    android:textColor="#95BD3D"
                    android:textColorHint="#000" />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/taskmasterAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/log"
                android:elevation="8dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingBottom="13dp"
                android:paddingTop="13dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/register" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="#686262" />

                <design.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="6"
                    android:background="@android:color/transparent"
                    android:hint="اضافة كفيل"
                    android:textColor="#95BD3D"
                    android:textColorHint="#000" />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/employeeAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/log"
                android:elevation="8dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingBottom="13dp"
                android:paddingTop="13dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/kafal" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="#686262" />

                <design.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="6"
                    android:background="@android:color/transparent"
                    android:hint="اضافة عامل"
                    android:textColor="#95BD3D"
                    android:textColorHint="#000" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/log"
                android:elevation="8dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingBottom="13dp"
                android:paddingTop="13dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/owner" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="#686262" />

                <design.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="6"
                    android:background="@android:color/transparent"
                    android:hint="اصحاب العمل"
                    android:textColor="#95BD3D"
                    android:textColorHint="#000" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/workers_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/log"
                android:elevation="8dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingBottom="13dp"
                android:paddingTop="13dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/employees" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="#686262" />

                <design.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="6"
                    android:background="@android:color/transparent"
                    android:hint="العمال"
                    android:textColor="#95BD3D"
                    android:textColorHint="#000" />

            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/log"
            android:paddingRight="65dp"
            android:paddingLeft="65dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:elevation="8dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"

            >

            <design.MyTextView
                android:id="@+id/myTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="حسابي  "
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="22dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/profile" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>
